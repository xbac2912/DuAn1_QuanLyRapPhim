<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:paddingHorizontal="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvThemPhim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm Phim"
                android:textAlignment="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/tvUpdatePhim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:visibility="invisible"
                android:textAlignment="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:textColor="#000000"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại Phim"
            android:paddingHorizontal="20dp"
            android:textColor="#000000"/>
        <Spinner
            android:id="@+id/spnLoaiPhim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp"/>
        <EditText
            android:id="@+id/txtAnhPhim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL ảnh phim"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/txtTenPhim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên phim"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/txtMoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mô tả"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/txtGiaVe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập giá vé"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/txtKhoiChieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ngày khởi chiếu"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:padding="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnHuy"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textColor="#8692F7"
                android:background="#00000000"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:textColor="#8692F7"
                android:background="#00000000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>