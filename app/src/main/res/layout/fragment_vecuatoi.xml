        android:textSize="20sp"
        android:padding="20dp"
        android:text="Bạn chưa có vé nào?"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvVeCuaToi"
        android:layout_width="match_parent"
